@{
    ViewData["Title"] = "message list";
    Layout = "_Layout";
}

@model List<Message>

<div class="row">


    <div class="col-md-12">

        <table class="table">

            <thead>
        
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Mesaj</th>
                    <th>sil</th>
                </tr>

            </thead>
            <tbody>

                @if (Model.Count>0)
                {
                    @foreach (var item in Model)
                    {
                        
                        <tr>

                            <td>@item.Name</td>
                            <td>@item.LastName</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Email</td>
                            <td>@item.UserMessage</td>
                            <td> <a class="btn btn-danger" asp-area="admin" asp-controller="Home" asp-action="MessageDelete" asp-route-id="@item.Id"> Sil </a> </td>


                        </tr>

                    }
                }
                else
                {
                 
                }


            </tbody>
        </table>

    </div>

</div>
