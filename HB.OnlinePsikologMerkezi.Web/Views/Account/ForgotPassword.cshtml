
@{
    ViewData["Title"] = "Şifremi Unuttum";
}
@model ForgetPasswordDto
<h1 class="display-3   text-center">Şifremi Unuttum</h1>



<div class="container border-top  border-bottom shadow ">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-12 col-xl-12 ">
            <div class="card text-black" style="border:none">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-9 col-xl-7 order-2 order-lg-1">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Yeni şifre bağlantısı için e-posta adresini söyler misin ? </p>

                            <form asp-action="ForgotPassword" asp-controller="Account" class="mx-1 mx-md-4" method="post">

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div asp-validation-summary="ModelOnly">
                                    </div>
                                </div>


                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">

                                        <label asp-for="Email" class="form-label"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Bağlantıyı Gönder</button>
                                </div>

                            </form>

                        </div>
                        <div class="col-md-10 col-lg-9 col-xl-5 d-flex align-items-center order-1 order-lg-2">

                            <img src="~/assets/img/forgotpass.gif"
                                 class="img-fluid" alt="Sample image">

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
